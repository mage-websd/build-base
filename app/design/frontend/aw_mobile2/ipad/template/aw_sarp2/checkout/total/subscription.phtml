?><?php $total = 0;?>
<tr class="shopping-cart-summary__row">
    <td colspan="<?php echo $this->getColspan()?>" class="shopping-cart-summary__name">
        <?php echo sprintf(($this->getRenderingArea() == $this->getTotalArea()) ? '<strong>%s</strong>' : '%s', $this->escapeHtml($this->getTotalTitle())) ?>
    </td>
    <td class="shopping-cart-summary__price">
        <span class="price"></span>
    </td>
</tr>
<?php foreach ($this->getTotalItems() as $i => $item): ?>
    <?php foreach ($this->getTotalItemDetails($item) as $j => $row):?>
        <tr class="shopping-cart-summary__row total-details">
            <td colspan="<?php echo $this->getColspan(); ?>" class="shopping-cart-summary__name">
                <?php echo $this->escapeHtml($this->getItemDetailsRowLabel($row)) ?>
            </td>
            <td class="shopping-cart-summary__price">
                <?php $total += $this->getItemDetailsRowAmount($row);?>
                <span class="price"><?php echo $this->formatPrice($this->getItemDetailsRowAmount($row)) ?></span>
            </td>
        </tr>
    <?php endforeach; ?>
    <tr class="shopping-cart-summary__row">
        <td colspan="<?php echo $this->getColspan()?>" class="shopping-cart-summary__name">
            <strong><?php echo $this->escapeHtml($this->getItemName($item)); ?></strong>
        </td>
        <td class="shopping-cart-summary__price">
            <span class="price"><strong><?php echo $this->formatPrice($total) ?></strong></span>
        </td>
    </tr>
<?php endforeach; ?>