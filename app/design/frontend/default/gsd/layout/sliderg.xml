<layout>
    <default>
        <reference name="head">
            <action method="addItem">
                <type>js_css</type><name>sliderg/swiper/css/swiper.min.css</name>
            </action>
            <!--<action method="addJs">
                <script>sliderg/swiper/js/swiper.min.js</script>
            </action>-->
            <action method="addJs">
                <script>sliderg/swiper/js/swiper.jquery.min.js</script>
            </action>
        </reference>
    </default>

    <sliderg_index_index>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="sliderg/slider" name="sliderg_slider">
                <action method="setSliderId">
                    <slider_id>home_top</slider_id>
                </action>
            </block>
        </reference>
    </sliderg_index_index>
</layout>