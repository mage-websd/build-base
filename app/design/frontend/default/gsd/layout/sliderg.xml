<layout>
    <default>
        <reference name="head">
            <action method="addItem">
                <type>js_css</type>
                <name>sliderg/swiper/css/swiper.min.css</name>
            </action>
            <!--<action method="addJs">
                <script>sliderg/swiper/js/swiper.min.js</script>
            </action>-->
            <action method="addJs">
                <script>sliderg/swiper/js/swiper.jquery.min.js</script>
            </action>
        </reference>
    </default>

    <sliderg_index_index>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="sliderg/slider" name="sliderg_slider">
                <action method="setSliderId">
                    <slider_id>slider_1</slider_id>
                </action>
            </block>
        </reference>
    </sliderg_index_index>

    <catalog_product_view>
        <remove name="product.info.upsell"/>
        <reference name="content">
            <block type="sliderg/products_list" name="product_upsell_slider" after="-"
                   template="sliderg/products/list.phtml">
                <action method="setTypeCollection">
                    <type_collection>upsell</type_collection>
                </action>
            </block>
            <block type="catalog/product_list_related" name="catalog.product.related" after="-"
                   template="catalog/product/list/related.phtml"/>
        </reference>
    </catalog_product_view>
</layout>