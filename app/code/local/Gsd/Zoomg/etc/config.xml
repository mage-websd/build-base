<?xml version="1.0"?>
<config>
    <modules>
        <Gsd_Zoomg>
            <version>0.1.0</version>
        </Gsd_Zoomg>
    </modules>
    <global>
        <blocks>
            <zoomg>
                <class>Gsd_Zoomg_Block</class>
            </zoomg>
        </blocks>
        <helpers>
            <zoomg>
                <class>Gsd_Zoomg_Helper</class>
            </zoomg>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <zoomg>
                    <file>zoomg.xml</file>
                </zoomg>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <zoomg>
                                            <title>Setting Zoom</title>
                                        </zoomg>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>