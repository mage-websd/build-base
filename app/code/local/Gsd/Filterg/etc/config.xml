<?xml version="1.0"?>
<config>
    <modules>
        <Gsd_Filterg>
            <version>0.1.0</version>
        </Gsd_Filterg>
    </modules>
    <global>
        <blocks>
            <filterg>
                <class>Gsd_Filterg_Block</class>
            </filterg>
        </blocks>
        <helpers>
            <filterg>
                <class>Gsd_Filterg_Helper</class>
            </filterg>
        </helpers>
    </global>
    <frontend>
        <routers>
            <catalog>
                <args>
                    <modules>
                        <filterg before="Mage_Catalog">Gsd_Filterg_Catalog</filterg>
                    </modules>
                </args>
            </catalog>
        </routers>
        <layout>
            <updates>
                <filterg>
                    <file>filterg.xml</file>
                </filterg>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <filterg>
                                            <title>Filter Catalog Ajax</title>
                                        </filterg>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <default>
        <filterg>
            <general>
                <enable>1</enable>
            </general>
        </filterg>
    </default>
</config>