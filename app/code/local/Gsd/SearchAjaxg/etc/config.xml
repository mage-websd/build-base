<config>
    <modules>
        <Gsd_SearchAjaxg>
            <version>0.0.12</version>
        </Gsd_SearchAjaxg>
    </modules>
    <frontend>
        <routers>
            <searchajaxg>
                <use>standard</use>
                <args>
                    <module>Gsd_SearchAjaxg</module>
                    <frontName>searchajaxg</frontName>
                </args>
            </searchajaxg>
        </routers>
        <layout>
            <updates>
                <searchajaxg>
                    <file>searchajaxg.xml</file>
                </searchajaxg>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Gsd_SearchAjaxg>
							<title>Search Ajax</title>
							<sort_order>10</sort_order>
						</Gsd_SearchAjaxg>
                        <system>
						    <children>
								<config>
									<children>
										<searchajaxg translate="title" module="searchajaxg">
											<title>searchajaxg</title>
											<sort_order>100</sort_order>
										</searchajaxg>
									</children>
								</config>
						    </children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<searchajaxg>
					<file>searchajaxg.xml</file>
				</searchajaxg>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <searchajaxg>
                <class>Gsd_SearchAjaxg_Model</class>
                <resourceModel>searchajaxg_resource</resourceModel>
            </searchajaxg>
        </models>
        <blocks>
            <searchajaxg>
                <class>Gsd_SearchAjaxg_Block</class>
            </searchajaxg>
        </blocks>
        <helpers>
            <searchajaxg>
                <class>Gsd_SearchAjaxg_Helper</class>
            </searchajaxg>
        </helpers>
    </global>

    <default>
        <searchajaxg>
            <settings>
                <border_color>#CCCCCC</border_color>
                <border_width>1</border_width>
                <hover_background>#7FC1F8</hover_background>
            </settings>
            <suggest>
                <enable>1</enable>
                <suggest_color>#FFF</suggest_color>
                <background>#0A263D</background>
                <count_color>#FF0000</count_color>
            </suggest>
            <preview>
                <enable>1</enable>
                <number_product>5</number_product>
                <show_image>1</show_image>
                <show_name>1</show_name>
                <show_description>1</show_description>
                <num_char_description>100</num_char_description>
                <pro_description_color>#0A263D</pro_description_color>
                <background>#ffffff</background>
                <pro_title_color>#E26703</pro_title_color>
                <image_width>50</image_width>
                <image_height>50</image_height>
                <image_border_width>1</image_border_width>
                <image_border_color>#CCC</image_border_color>
            </preview>
        </searchajaxg>

    </default>
</config>
