<?xml version="1.0"?>
<config>
  <modules>
    <JoomlArt_JmColorSwatch>
      <version>0.1.0</version>
    </JoomlArt_JmColorSwatch>
  </modules>
  <frontend>
    <routers>
      <jmcolorswatch>
        <use>standard</use>
          <args>
            <module>JoomlArt_JmColorSwatch</module>
            <frontName>jmcolorswatch</frontName>
          </args>
      </jmcolorswatch>
    </routers>
		<layout>
		  <updates>
			<jmcolorswatch>
			  <file>jmcolorswatch.xml</file>
			</jmcolorswatch>
		  </updates>
		</layout>
  </frontend>
  <global>
    <helpers>
      <jmcolorswatch>
        <class>JoomlArt_JmColorSwatch_Helper</class>
      </jmcolorswatch>
    </helpers>
	<blocks>
	  <jmcolorswatch>
		<class>JoomlArt_JmColorSwatch_Block</class>
	  </jmcolorswatch>
	</blocks>
  </global>
  <admin>
	<routers>
	  <jmcolorswatch>
	    <use>admin</use>
		<args>
		  <module>JoomlArt_JmColorSwatch</module>
		  <frontName>jmcolorswatch</frontName>
		</args>
	  </jmcolorswatch>
	</routers>
  </admin>
  <adminhtml>
	<layout>
	  <updates>
		<jmcolorswatch>
		  <file>jmcolorswatch.xml</file>
		</jmcolorswatch>
	  </updates>
	</layout>
  </adminhtml>
</config> 